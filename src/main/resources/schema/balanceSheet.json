{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://db.rmbcorporate.com/schemas/law/balanceSheet.json",
  "type": "object",
  "properties": {
    "id" : { "type": "number" },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/assets"
      }
    },
    "liabilities": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/liabilities"
      }
    },
    "equity": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/equity"
      }
    }
  },
  "required": ["id"],
  "definitions": {
    "assets" : {
      "type": "object",
      "properties": {
        "id" : { "type" : "number" },
        "category" : { "type" : "string" },
        "basis" : { "type" : "number" },
        "fmv" : { "type" : "number" }
      }
    },
    "liabilities" : {
      "type" : "object",
      "properties" : {
        "id" : { "type" : "number" },
        "category" : { "type" : "string" },
        "fmv" : { "type" : "number" }
      }
    },
    "equity" : {
      "type" : "object",
      "properties" : {
        "id" : { "type" : "number" },
        "category" : { "type" : "string" },
        "fmv" : { "type" : "number" },
        "rights" : {
          "type" : "array",
          "items" : {
            "type" : "string",
            "$ref" : "#/definitions/rights"
          }
        }
      },
      "definitions" : {
        "rights" : {
          "properties" : {
            "id" : { "type" : "number" },
            "entityid" : { "type" : "number" },
            "description" : { "type" : "string" },
            "effectivestart" : { "type" : "date" },
            "effectiveend" : { "type" : "date" }
          }
        }
      }
    }
  },
  "additionalProperties": {
    "$ref": "balanceSheet.json"
  }
}